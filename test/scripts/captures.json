{
  "config": {
      "target": "http://127.0.0.1:3003",
      "phases": [
        { "duration": 30, "arrivalRate": 1 }
      ],
      "payload": {
        "fields": ["species", "name"]
      },
      "ensure": {
        "p95": 300
      }
  },
  "scenarios": [
    {
      "name": "Create a pet and verify it's been created.",
      "flow": [
        {"post":
          {
            "url": "/pets",
            "json": {"name": "{{ name }}", "species": "{{ species }}"},
            "capture": {"json": "$.id", "as": "id"}
          }
        },
        {"get":
          {
            "url": "/pets/{{ $.id }}",
            "match": {"json": "$.name", "value": "{{ name }}"}
          }
        }
      ]
    }
  ]
}
