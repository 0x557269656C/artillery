{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Schema for Minigun test scripts",
  "type": "object",
  "properties": {
    "config": {
      "type": "object",
      "properties": {
        "environments": {
          "type": "object"
        },
        "target": { "type": "string" },
        "phases": {
          "type": "array"
        },
        "payload": {
          "type": "object"
        },
        "defaults": {
          "type": "object"
        },
        "ensure": {
          "type": "object"
        },
        "mode": {
          "type": "string",
          "enum": [ "poisson", "uniform" ]
        }
      }
    },
    "scenarios": {
      "type": "array"
    }
  },
  "required": ["scenarios"]
}
